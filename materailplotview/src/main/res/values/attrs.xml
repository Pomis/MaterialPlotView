<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BarPlotView">
        <attr name="gradient_start_color" format="color"/>
        <attr name="gradient_end_color" format="color"/>
        <attr name="bar_width" format="dimension"/>
        <attr name="fill_type" format="enum">
            <enum name="horizontal_gradient" value="0"/>
            <!--<enum name="vertical_gradient" value="1"/>-->
            <enum name="value_dependent" value="2"/>
            <enum name="random_colors" value="3"/>
        </attr>
        <attr name="font_size" format="dimension"/>
        <attr name="bar_style" format="enum">
            <enum name="rounded" value="0"/>
            <enum name="rectangle" value="1"/>
            <enum name="irregularly_rounded" value="2"/>
        </attr>
    </declare-styleable>
</resources>